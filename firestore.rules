
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Is the user logged in?
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper: Check admin status from the SEPARATE /admins collection
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    // Helper: Check super admin status
    function isSuperAdmin() {
      return isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.role == 'super_admin';
    }

    // Helper: Check if the user is the specific bootstrap Super Admin
    function isBootstrapEmail() {
      return isSignedIn() && request.auth.token.email == "syanmedtechadmen@gmail.com";
    }

    // Admin collection rules
    match /admins/{uid} {
      // Bootstrap allowance: The specific email can create its own admin doc
      allow create: if isBootstrapEmail() && request.auth.uid == uid;
      // Super admins can manage other admins
      allow write: if isSuperAdmin();
      allow read: if isAdmin();
    }

    // Public users collection
    match /users/{uid} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
      allow write: if isAdmin() || (isSignedIn() && request.auth.uid == uid);
    }

    match /appConfig/player {
      allow read: if true; 
      allow write: if isAdmin();
    }

    match /videos/{videoId} {
      allow read: if true; // Public access to metadata via share link
      allow write: if isAdmin();
    }

    match /importJobs/{jobId} {
      allow read, write: if isAdmin();
    }

    match /videoStats/{videoId} {
      allow read: if true;
      allow write: if true; // Heartbeats and views update these
    }

    match /violations/{violationId} {
      allow read: if isAdmin();
      allow create: if isSignedIn(); 
    }

    match /accessSessions/{sessionId} {
      allow read: if isAdmin() || (isSignedIn() && request.resource.data.userId == request.auth.uid);
      allow create: if isSignedIn();
      allow update: if isSignedIn(); 
    }
    
    match /bans/{emailLower} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
